%h1 Listing articles

%table
  %thead
    %tr
      %th Title
      %th Body
      %th
      %th
      %th

  %tbody
    - @articles.each do |article|
      %tr
        %td= link_to article.title, article
        %td= article.body
        %td= link_to 'Show', article
        %td= link_to "Edit #{article.title}", edit_article_path(article)
        %td= link_to "Destroy #{article.id}", article, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Article', new_article_path
